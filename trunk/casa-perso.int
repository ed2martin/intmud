classe p_lula
herda personagem
const nome = "Lula"
const agenda = "Lula - Vive na água e em lugares com grande umidade\n\
Algumas conseguem controlar os mares e criar ondas"
const podepegar = 1
const agressivo = 1
const expmax = nivel * nivel * 2 + 14

func recalc_exec
  deftipo.limpar
  misc:perso_agua
  ataque = (nivel * 4 + 60) * nivel + 30
  defesa = nivel * 10 + 20
  veloc = (nivel * 4 + 60) * nivel + 30
