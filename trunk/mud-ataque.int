func checahab # Checa se personagem pode usar habilidade/magia e avisa o personagem
# arg0 = personagem
# Retorna verdadeiro se pode usar
  refvar r = ref(arg0.persobat)
  se !tipoarma # Nenhum tipo de arma definido: aceita qualquer arma
  senao !r.iempu # Não está usando uma arma
    se !(tipoarma & 1)
      arg0.msg("Não possui a arma necessária.")
      ret
    fimse
  senao r.iempu && tipoarma & 1 << r.iempu.obj.armatipo
  senao tipoarma == 1
    arg0.msg("Empunhando uma arma?")
    ret
  senao
    arg0.msg("Com essa arma?")
    ret
  fimse
  refvar x = (arg0.persobat.var.[nomevar] - 2) / 8
  se r.pvida <= x * (c_vida2 - c_vida1) + c_vida1
    arg0.msg("Pontos de vida insuficientes")
    ret
  senao r.pmana < x * (c_mana2 - c_mana1) + c_mana1
    arg0.msg("Mana insuficiente")
    ret
  senao r.pmove < x * (c_move2 - c_move1) + c_move1
    arg0.msg("Vigor insuficiente")
    ret
  fimse
  ret 1

func custohab
# arg0 = personagem
  refvar r = ref(arg0.persobat)
  refvar x = (r.var.[nomevar] - 2) / 8
  r.pvida -= x * (c_vida2 - c_vida1) + c_vida1
  r.pmana -= x * (c_mana2 - c_mana1) + c_mana1
  r.pvigor -= x * (c_move2 - c_move1) + c_move1

func efeitohab # Efeito da habilidade sob o alvo
# arg0 lançou habilidade ou magia em arg1
# Altera mudavida conforme pontos de vida alterados
# refvar r = ref(tipoalvo >= 4 && arg0 == arg1 ? arg1.persoesc : arg1.persobat)
  refvar r = ref(arg1.persobat)
  a_efeito1 && rand(100) < a_prob1 && criar("e_" + a_efeito1, r, r.pnivel)
  a_efeito2 && rand(100) < a_prob2 && criar("e_" + a_efeito2, r, r.pnivel)
  a_efeito3 && rand(100) < a_prob3 && criar("e_" + a_efeito3, r, r.pnivel)
  se a_remove
    textotxt t
    epara t.addfim(a_remove), t.linha, apagar(r.dentro2.objini("e_" + t.remove))
    efim
  fimse
  refvar x = (arg0.persobat.var.[nomevar] - 2) / 8
  real2 valor
  valor = x * (a_move2 - a_move1) + a_move1
  valor && (r.pmove += valor) > r.pmovemax && (r.pmove = r.pmovemax)
  valor = x * (a_mana2 - a_mana1) + a_mana1
  valor && (r.pmana += valor) > r.pmanamax && (r.pmana = r.pmanamax)
  ret !(valor = x * (a_vida2 - a_vida1) + a_vida1), nulo
  refvar vida = int(r.pvida)
  (r.pvida += valor) > r.pvidamax && (r.pvida = r.pvidamax)
  mudavida += r.pvida - vida
  !vida && r.pvida && r.dono.perso && r.dono.escolhebat


