func exec
  txt10 dir
  dir = misc:d1[arg2]
  se arg0 == ""
    arg0.msg("Abrir o que?")
  senao dir
    se !arg0.dono.dir_[dir]
      arg0.msg("Não há porta nessa direção.")
      ret
    fimse
    casovar 3 & arg0.dono.tipo_[dir]
    casose "0"
      arg0.msg("Não há porta nessa direção.")
