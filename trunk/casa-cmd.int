classe cmd_al
herda comando_comum
const obj = arg0.e_admin ? este

func escr
  prog p
  se !p.existe(arg1)
    arg0.msg("Classe não existe: " + arg1)
  senao
    p.apagar(arg1)
    p.salvar(config:progsalvar)
    arg0.msg("Classe apagada: " + arg1)


classe cmd_il
herda comando_comum
const obj = arg0.e_admin ? este

func escr
  prog p
  txt80 lin
  se !p.iniclasse(arg1)
    arg0.msg("\bNenhuma classe encontrada.")
  senao
    textotxt t
    t.addfim("\bClasses:")
    enquanto p.lin
      se inttotal(lin + p.texto) >= 70
        t.addfim(lin), lin = p.texto
      senao lin
        lin += ", " + p.texto
      senao
        lin = p.texto
      fimse
      p.depois
    efim
    lin && t.addfim(lin)
    arg0.msg(t.remove(1000))
  fimse


