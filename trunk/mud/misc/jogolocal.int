func j_tela_tecla
  casovar arg0
  casose "PGUP"
    j_hist_pos.antes
    j_tela.texto = ""
    j_tela.texto = j_hist_pos.texto
    ret 1
  casose "PGDN"
    j_hist_pos.depois
    j_tela.texto = ""
    j_tela.texto = j_hist_pos.texto
    ret 1
