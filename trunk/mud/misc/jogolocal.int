func j_tela_msg
  j_tela.linha = 0
  j_hist_texto.addfim(arg0)
  j_hist_texto.remove(j_hist_texto.linhas - 50)
  j_hist_pos = j_hist_texto.fim
  recebe(txtremove(arg0, "ED"))
