  epara l.addfim(arg0.evento, r.evento), l, l.ini.remove
    ret l.objini.cmd_destrancarobj(arg0, r, chave), nulo
  efim
# Destranca o item
  r.i_comechave && chave.apagar(1)
  r.i_aberto = 3
  $mens.p(arg0, r)
  $mens.mtodos1("$P destrancou $a.")
  epara l.addfim(arg0.evento, r.evento), l, l.ini.remove
    l.objini.cmd_destrancouobj(arg0, r, chave)
