func segundo1
  uint16 novonivel
  ref r
  r = procperso("p_catador_de_insetos")
# Checa se tem catador de insetos
  se !r
    ret
# Checa se catador está lutando
  senao passo < 20
    r.recuperar
    ret
  fimse
# Catador está lutando
  r.var.h_toxico = 1
  r.var.h_onda_trovao = 1
  se r.nivel < 40 && r.energia < r.enermax * 30 / 100
    novonivel = r.nivel + 2
  senao r.e_paralisado || r.e_dormindo || r.e_envenenado
    novonivel = r.nivel
  fimse
  se novonivel
    msg(r.nome + " usa poção e se cura")
    r.nivel = novonivel
    r.morreu(1) # Apenas dar experiência, não apaga o personagem
    r.recuperar
    msg(r.nome + " é nível " + r.nivel)
  fimse

