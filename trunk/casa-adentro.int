func entrou
# Se o jogador estiver marcado como escolhido, deixa de ser o escolhido
  arg0 == escolhido && (escolhido = nulo)
# Cria o catador de insetos
  se !procperso("p_catador_de_insetos")
    criar("p_catador_de_insetos", este, 32)
    passo = 0, escolhido = nulo
  fimse
# Descrição da sala
  ver(arg0)

func segundo40
  arg0.energia -= 5
  arg0.msg("Uma pedra de gelo cai do teto em você, " + arg0.energia + " de " + arg0.enermax)

func segundo3
# Checa se o Catador de insetos está na sala
  se !procperso("p_catador_de_insetos")
    escolhido = nulo
    passo = 0
    ret
# Encerra batalha se jogador não estiver na sala
  senao escolhido && escolhido.dono != este
    escolhido = nulo
    passo = 0
  fimse
# Animal do catador acorda
  listaitem i
  i = dentro1.ini
  enquanto i
    se i.obj.e_dormindo > 100
      msg("Catador explode uma bomba perto de " + i.obj.nome)
      i.obj.dormindo = 30
    fimse
    i.depois
  efim
# Catador de insetos desafia jogador
  se !escolhido && !arg0.var.l_hebraico
    escolhido = arg0
    passo = 1
    ret
  fimse
# Passos da batalha
  casovar passo
  casose "1"
    passo += 1
