func cmd_atkenv
  pontos = arg1.persobat.pvida

func cmd_atacou
  refvar vida = arg0.persobat.pvida
  refvar max = arg0.persobat.pvidamax
  se !arg2.result && vida && vida < max
    pontos = intpos(pontos - arg1.persobat.pvida) / 2
    vida += pontos
    vida > max && (vida = max)


