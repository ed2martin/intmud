func ver_batalha
  listaitem i
  textotxt t
  epara i = $s_casa005.dentro2.ini, i, i.depois
    i.obj.jog && t.addfim(i.obj.nome)
  efim
  arg0.msg("Jogo Batalha")
  casovar t.linhas
  casose "0"
    arg0.msg("Você não vê nenhum boneco nesse jogo. Que esquisito!")
    sair
  casose "1"
    arg0.msg("Você vê um boneco chamado " + t.remove)
    sair
  casose
    arg0.msg("Você vê os seguintes bonecos: " + txttroca(t.remove(1000), "\n", ", "))
  casofim
  arg0.msg("Tem um botão esquisito, para apertá-lo tecle APERTAR")
  ret 1

