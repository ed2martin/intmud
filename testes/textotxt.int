const msg = tela.msg(arg0)

func iniclasse
  criar(arg0)

func ini
  se tela.proto == 0
    terminar
  fimse
  p = t.ini
  blocoini = t.ini
  blocofim = t.fim
  msg("Tecla F1 mostra menu de opções\n")
  menu:mostra
  menu:selec

func tela_tecla
  se arg0 != "UP" && arg0 != "DOWN"
    tela.linha = 0
  fimse
  #msg(opcao + " : tecla_" + txtcod(arg0) + "\n")
  se [opcao]:tecla_[txtcod(arg0)]
    ret 1
  senao arg0 != "UP" && arg0 != "DOWN"
    ret [opcao]:outro(arg0)
  fimse

