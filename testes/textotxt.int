func tecla_ENTER
  int16 min
  int16 max
  int32 numlin
  min=tela.texto, max=txt2(tela.texto)
  se min<2 || max<2
    msg("Digite dois números maiores ou iguais a 2, tecla ESC cancela\n")
    ret 1
  fimse
  numlin = t.Linhas
  t.dividelin(min, max)
  se t.Linhas == numlin
    msg("Nenhuma linha foi dividida\n")
  senao
    msg("Linhas foram divididas\n")
  fimse
  tela.texto = ""
  ret menu:selec

