  rz.varz.0 = 12
  rz.varz.1 = 15
  rz.varz.2 = 18
  rz.refx = rx
  rz.teste1 = $teste1
# Texto de rz
  rz.t.addfim("bom dia\nboa tarde\nboa noite")
  rz.t.addfim("txtproc(<texto>, <texto procurado>)")
  rz.t.addfim("txtproc(<texto>, <texto procurado>, <caracter inicial>)")
  rz.t.addfim("    Procura <texto procurado> em <texto>")
  rz.t.addfim("    Retorna -1 se não encontrou ou o número do caracter se encontrou")
  rz.t.addfim("    <caracter inicial> = a partir de onde procurar no texto")
  rz.t.addfim("            0 = primeiro caracter, 1 = segundo, etc.")
  rz.t.addfim("    Para diferenciar letras minúsculas de maiúsculas e acentuadas de")
  rz.t.addfim("    não acentuadas, escrever txtprocdif ao invés de txtproc.")
  rz.p1 = rz.t.ini
  rz.p2 = rz.t.ini
  rz.p2.depois(4)
  rz.pos.0 = rz.p2
  rz.pos.1 = rz.t.ini
  rz.pos.1.depois(9)
  rz.pos.2 = rz.t.fim
  rz.pos.3 = rz.t.fim
  rz.pos.3.antes
  rz.pos.4 = rz.t.ini
# Anota resultado no log
  $log.anota(rx.objetos)
# Salva arquivo
  $log.msg("------ Salvando: " + sav.salvar("abc.sav", rx.objetos, 10, ""))
# Apaga objetos
  apagar(rx, ry, rz)

