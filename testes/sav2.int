classe log
arqlog log
func iniclasse
  criar(arg0)
func ini
  log.abrir("abc.log")
  log.msg("------ Novo arquivo")
const msg = log.msg(arg0)
func anota # Anota objetos em arquivo
  listaitem l
  l = arg0.ini
  enquanto l
    l.obj.anota
    l.depois
  efim

classe x
int8 num
sav int8 varint
sav real varreal
sav listaobj objetos
sav listaitem objitem.3
sav datahora tempo
func anota
  listaitem l
  $log.msg("Objeto x")
  $log.msg("  varint = " + varint)
  $log.msg("  varreal = " + varreal)
  $log.msg("  data = " + tempo.dia + "/" + tempo.mes + "/" + tempo.ano)
  $log.msg("  hora = " + tempo.hora + ":" + tempo.min + "." + tempo.seg)
  $log.msg("  objetos =")
  l = objetos.ini
  enquanto l
    $log.msg("    " + l.obj)
    se l = objitem.0
      $log.msg("      >> objitem.0")
    senao l = objitem.1
      $log.msg("      >> objitem.1")
    senao l = objitem.2
      $log.msg("      >> objitem.2")
    fimse
    l.depois
  efim
  $log.msg("  objitem.0.obj = " + objitem.0.obj)
  $log.msg("  objitem.1.obj = " + objitem.1.obj)
  $log.msg("  objitem.2.obj = " + objitem.2.obj)

