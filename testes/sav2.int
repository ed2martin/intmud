  rx.varint = -15
  rx.varreal = 3.45
  rx.objetos.addfim(ry)
  rx.objetos.addfim(rx)
  ry.objitem = rx.objetos.addfim(rz)
  rx.objitem.0 = rx.objetos.addfim(ry)
  rx.objitem.1 = rx.objetos.addfim(ry)
  rx.objitem.2 = rx.objetos.addfim(rx)
