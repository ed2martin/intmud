    ret $mens.mp(m_sem_info, arg0)
  fimse
  textotxt h
  txt100 t1
  txt100 t2
  epara t1 = r.var.ini("m_"), t1, t1 = r.var.depois(t1, "m_")
    t2 = txte(txt(t1, 2)) # , t2 += txtesp(30 - inttotal(t2))
