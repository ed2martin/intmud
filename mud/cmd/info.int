    txt2(r.var.[t1]) && (t2 += " R" + txt2(r.var.[t1]))
    h.addfim(t2)
  efim
  ret !h.linhas, $mens.mp(m_nenhum, arg0)
  $mens.p(arg0, arg0.persoesc)
  h.addini("\b\c6" + $mens.txt(r == arg0 ? m_lista1 : m_lista2, arg0) + "\b")
  arg0.msg2(h.remove(1000))


