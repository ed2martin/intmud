      lin += ", r.vestir(" + int(l.4 == "0" ? 50 : l.4) + "), u.recalc=1"
      t2.addfim(lin)
      t2.addfim("fimse")
      sair
    casofim
  efim
  mudou & 4 ? t2.addini("int8 x # Usado como rascunho")
