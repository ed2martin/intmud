          sair
        casofim
      efim
      sair int(l.1) <= 0
      int(l.1) < 100 && t.addfim("se rand(100)<" + int(l.1))
      lin = m1 == 2 ? "u="
      lin += "criar(\"p_" + txtvis(l.2) + "\", arg0, "
      lin += l.3 == l.4 ? int(l.3) : "rand(" + int(l.3) + ", " + int(l.4) + ")"
      lin += l.5 ? ", \"" + txtvis(l.5) + "\")" : ")"
      t2.addfim(lin)
      sair
    casose "I" # Dar item: <item> <nível> <variáveis>
      sair int(l.1) <= 0
      lin = "u && "
      int(l.1) < 100 && (lin += "rand(100)<" + int(l.1) + " && ")
