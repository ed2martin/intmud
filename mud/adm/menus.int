  [arg0]:f_tipo == 3 && (tipo |= config:item_comida)
  [arg0]:f_tipo == 4 && (tipo |= config:item_pergaminho)
  tipo &= ~valor
  epara t.addfim(arg2), t.linhas, t.remove
    tipo & 1 ? (lin2 += ", " + x + "-" + t.ini.texto)
    valor & 1 ? (lin1 += ", " + x + "-" + t.ini.texto)
